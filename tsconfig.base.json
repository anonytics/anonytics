{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "es6", "es2017", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true /* Don't typecheck libraries or node_modules */,
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "pretty": true
  }
}
